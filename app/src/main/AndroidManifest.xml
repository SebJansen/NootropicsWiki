<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.hva.mobileapplicationdevelopment.jansens015.nootropicswiki">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_article"
        android:label="@string/label.app.action_bar.title"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.ScrollableTabsActivity"
            android:label="@string/label.app.action_bar.title"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.ExcerptActivity"
            android:label="Details"
            android:parentActivityName=".activities.ScrollableTabsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.NewArticleActivity"
            android:label="New article"
            android:parentActivityName=".activities.ScrollableTabsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.UpdateArticleActivity"
            android:label="Update article"
            android:parentActivityName=".activities.ScrollableTabsActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>
